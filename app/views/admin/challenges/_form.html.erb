<%= form_for(@challenge, url: admin_challenges_path) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :rules %><br />
    <%= f.text_field :rules %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date, selected: Date.today %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date, selected: Date.today %>
  </div>

  <div class="actions">
    <%= f.submit "Create challenge", class:"btn btn-success" %>
  </div>
<% end %>
