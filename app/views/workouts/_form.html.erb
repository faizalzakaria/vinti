<%= form_for(@workout) do |f| %>
  <div class="field">
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </div>
  <div class="field">
    <%= f.label :workout_date %><br />
    <%= f.datetime_select :workout_date %>
  </div>
  <div class="actions">
    <%= f.submit "Create workout", class:"btn btn-success" %>
  </div>
<% end %>
